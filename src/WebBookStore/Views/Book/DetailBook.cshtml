    <script>
        function btnIncreaseClick() {
            var i = parseInt(document.getElementById('inc').value);
            i = isNaN(i) ? 0 : i;
            document.getElementById('inc').value = ++i;
        }
    </script>
    <script>
        function btnDecreaseClick() {
            var i = parseInt(document.getElementById('inc').value);
            i = isNaN(i) ? 0 : i;
            if (i > 0) {
                document.getElementById('inc').value = --i;
            }
        }
    </script>
