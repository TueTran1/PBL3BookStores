                                </td>
                                <td>
                                    @Model.Category.NameCatelogy
                                </td>
                            </tr>
                            <tr>
                                <td class="title">
                                    Condition
                                </td>
                                <td>
                                    @if (Model.Condition == true)
                                    {
                                        <h1>Còn Hàng</h1>
                                    }
                                    else
                                    {
                                        <h1>Hết Hàng</h1>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="title">
                                    Description
                                </td>
                                <td>
                                    @Model.Description
                                </td>
                            </tr>
                        </tbody>
                    </table>
