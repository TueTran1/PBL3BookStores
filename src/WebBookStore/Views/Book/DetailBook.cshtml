    @*------------------------DETAIL-----------------------------*@
    <section class="book">
        <div class="container">
            <div class="book-content row--base">
                <div class="book__info">
                    <div class="book__item">
                        <div class="row--base">
                            <img class="book__item--image" src=@Model.Images>
                            <div class="book__item--detail">
                                <h3>
                                    @Model.Title
                                </h3>
                                <p class="author">@Model.Author.Name</p>
                                <p class="price">@Model.Price VND</p>
                                <p class="description">
                                    @Model.Description
                                </p>
                                <div class="ctrl__list">
                                    <div class="numeric">
                                        <button class="numeric__button">+</button>
                                        <input />
                                        <button class="numeric__button">-</button>
                                    </div>
                                    <button class="ctrl--add-to-cart btn">
                                        ADD TO CART
                                    </button>
                                </div>
                                <div class="social__list">
                                    <div class="row--base">
                                        <a class="social__item">
                                            <i class="fab fa-twitter"></i>
                                            <span>Twiter</span>
                                        </a>
